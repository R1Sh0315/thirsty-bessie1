{
  "include": ["./src/**/*"],
  {
    "compilerOptions": {
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "*": ["types/*"]
      }
    }
  }
  
}
